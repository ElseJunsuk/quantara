    <!--           StackPane.alignment="CENTER"/>-->

    <ConstellationPane fx:id="selectedPane" maxHeight="550.0" maxWidth="1020.0">
    </ConstellationPane>

    <AnchorPane maxHeight="55.0" maxWidth="550.0">
        <TextField fx:id="promptInput" promptText="당신의 이야기를 들려주세요" styleClass="prompt-input" translateY="250.0"
                   AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                   AnchorPane.topAnchor="10.0"/>
    </AnchorPane>
</StackPane>
