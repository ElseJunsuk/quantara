<StackPane prefHeight="768.0" prefWidth="1366.0" stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.quant.quantara.external.controller.ViewController"
           fx:id="rootStackPane">

    <NextPrevBtnBorder fx:id="slideButtons" prefHeight="200.0" prefWidth="200.0">
