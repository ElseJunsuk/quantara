        <right>
            <NextButton prefWidth="50." prefHeight="100." mnemonicParsing="false" visible="false"
                        BorderPane.alignment="CENTER" styleClass="next-button"/>
        </right>
    </NextPrevBtnBorder>

    <Group fx:id="topMenu" translateX="80.0" translateY="20.0" StackPane.alignment="TOP_LEFT">
    </Group>

    <!--    <Label fx:id="topLabelTop" styleClass="top-label" translateY="-335.0"/>-->
