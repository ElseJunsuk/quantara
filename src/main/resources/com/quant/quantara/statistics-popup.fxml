<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane minWidth="400.0" prefHeight="300.0" prefWidth="500.0" styleClass="statistics-window"
            stylesheets="@styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.quant.quantara.external.controller.StatisticsController">
    <center>
        <GridPane alignment="CENTER" hgap="10.0" vgap="10">
            <Label styleClass="label-title" text="프롬프트:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="promptText" styleClass="label-value" wrapText="true" GridPane.columnIndex="1"
                   GridPane.halignment="LEFT" GridPane.rowIndex="0"/>

            <Label styleClass="label-title" text="감정 점수(평균):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="avgSentimentScoreLabel" styleClass="label-value" GridPane.columnIndex="1"
                   GridPane.halignment="LEFT" GridPane.rowIndex="1"/>

            <Label styleClass="label-title" text="감정 크기(평균):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Label fx:id="avgSentimentMagnitudeLabel" styleClass="label-value" GridPane.columnIndex="1"
                   GridPane.halignment="LEFT" GridPane.rowIndex="2"/>

            <Label styleClass="label-title" text="양자역학적 실현 확률:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label fx:id="quantumProbabilityLabel" styleClass="label-value" GridPane.columnIndex="1"
                   GridPane.halignment="LEFT" GridPane.rowIndex="3"/>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" maxWidth="153.0" minWidth="124.0" prefWidth="153.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="600.0" minWidth="200.0" prefWidth="287.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <BorderPane fx:id="quantumCircuitBorder" prefHeight="200.0" styleClass="quantum-circuit-border">
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
</BorderPane>
